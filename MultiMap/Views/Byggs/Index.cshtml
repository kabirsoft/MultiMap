@model IEnumerable<MultiMap.Data.Models.Bygg>
@using MultiMap.Helpers

@{
    ViewData["Title"] = "Bygg";
}

<h1>Bygg</h1>
<p> Her kan du redigere og legge til bygninger </p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AntallEtasje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Byggeår)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokasjon)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Navn)</a>
                </td>
                <td>
                    @Html.Truncate(item.Beskrivelse, 20)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AntallEtasje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Byggeår)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lokasjon.Navn)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
