@model IEnumerable<MultiMap.Data.Models.Lokasjon>
@using MultiMap.Helpers

@{
    ViewData["Title"] = "Lokasjon";
}

<h1>Lokasjon</h1>
<p> Her registeres loklisasjonen til bygningene som skal kartlegges </p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selskap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AntallBygg)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Navn) </a>
                </td>
                <td>
                    @Html.Truncate(item.Beskrivelse, 20)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Selskap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AntallBygg)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
